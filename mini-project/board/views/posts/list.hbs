<div class="rounded-lg border bg-card text-card-foreground shadow-sm">
  <div class="p-6">
    <h1 class="text-2xl font-semibold leading-none tracking-tight">게시글 목록</h1>
  </div>
  <div class="p-0">
    <div class="relative w-full overflow-auto">
      <table class="w-full caption-bottom text-sm">
        <thead class="[&_tr]:border-b">
          <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0 w-[100px]">번호</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">제목</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0 w-[150px]">작성자</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0 w-[200px]">작성일</th>
          </tr>
        </thead>
        <tbody class="[&_tr:last-child]:border-0">
          {{#each posts}}
            <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
              <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">{{this.postNumber}}</td>
              <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0 font-medium">
                <a href="/posts/{{this._id}}" class="hover:underline">{{this.title}}</a>
              </td>
              <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">{{this.author}}</td>
              <td class="p-4 align-middle [&:has([role=checkbox])]:pr-0">{{this.createdAt}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="flex items-center justify-end p-6">
    {{> pagination}}
  </div>
</div>