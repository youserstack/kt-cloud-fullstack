<main class="container mx-auto p-4 sm:p-8">
  {{#with post}}
    <div class="mb-8">
      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight">{{title}}</h1>
      <div class="mt-4 flex items-center space-x-4 text-sm text-gray-500">
        <span>작성자:
          <b class="font-semibold text-gray-800">{{writer}}</b></span>
        <span>조회수: {{hits}}</span>
        <span>{{dateString createdAt}}</span>
      </div>
    </div>

    <div class="prose prose-lg max-w-none min-h-[200px] p-6 border-t border-b">
      <pre class="whitespace-pre-wrap break-words">{{content}}</pre>
    </div>

    <div class="mt-8 flex justify-between items-center">
      <a
        href="/"
        class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium h-10 px-4 py-2 bg-gray-100 text-gray-900 hover:bg-gray-200"
      >
        목록으로
      </a>
      <div class="space-x-2">
        <button
          onclick="location.href='/write?id={{_id}}'"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium h-10 px-4 py-2 bg-gray-100 text-gray-900 hover:bg-gray-200"
        >수정</button>
        <button
          onclick="deletePost('{{_id}}')"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium h-10 px-4 py-2 bg-red-600 text-white hover:bg-red-700"
        >삭제</button>
      </div>
    </div>
  {{/with}}

  {{! 댓글 섹션 (추후 구현) }}
  <section class="mt-12 border-t pt-8">
    <h3 class="text-lg font-semibold mb-4">0개의 댓글이 있습니다.</h3>

    <form method="post" action="/write-comment" class="space-y-4">
      <div class="flex space-x-2">
        <input
          type="text"
          name="name"
          placeholder="이름"
          class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
        />
        <input
          type="password"
          name="password"
          placeholder="비밀번호"
          class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
        />
      </div>
      <div class="flex items-start space-x-2">
        <textarea
          name="comment"
          placeholder="따뜻한 댓글을 남겨주세요."
          rows="3"
          class="min-h-[80px] w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
        ></textarea>
        <button
          type="submit"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium h-10 px-4 py-2 bg-gray-900 text-white hover:bg-gray-900/90"
        >댓글 작성</button>
      </div>
    </form>

    <div class="mt-6">
      {{! 댓글 목록이 여기에 표시됩니다. }}
    </div>
  </section>
</main>

