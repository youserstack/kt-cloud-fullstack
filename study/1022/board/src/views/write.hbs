<main class="container mx-auto p-4 sm:p-8">
  <h1 class="text-2xl sm:text-3xl font-bold tracking-tight mb-6">
    [{{title}}] 글 작성
  </h1>

  <div class="bg-white p-6 rounded-lg border shadow-sm">
    <form
      action="/api/v1/write"
      method="post"
      name="boardForm"
      class="space-y-4"
    >
      <div>
        <label
          for="title"
          class="block text-sm font-medium leading-none text-gray-800"
        >제목</label>
        <input
          type="text"
          id="title"
          name="title"
          placeholder="제목을 넣어주세요"
          class="mt-2 flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
        />
      </div>
      <div>
        <label
          for="writer"
          class="block text-sm font-medium leading-none text-gray-800"
        >이름</label>
        <input
          type="text"
          id="writer"
          name="writer"
          placeholder="이름을 넣어주세요"
          class="mt-2 flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
        />
      </div>
      <div>
        <label
          for="password"
          class="block text-sm font-medium leading-none text-gray-800"
        >비밀번호</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="비밀번호를 넣어주세요"
          class="mt-2 flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
        />
      </div>
      <div>

        <label
          for="content"
          class="block text-sm font-medium leading-none text-gray-800"
        >본문</label>
        <textarea
          id="content"
          name="content"
          placeholder="본문을 넣어주세요"
          rows="6"
          class="mt-2 min-h-[120px] w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
        ></textarea>
      </div>

      <div class="flex justify-end space-x-2">
        <button
          type="button"
          onclick="location.href='/';"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium h-10 px-4 py-2 bg-gray-100 text-gray-900 hover:bg-gray-200"
        >취소</button>
        <button
          type="submit"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium h-10 px-4 py-2 bg-gray-900 text-white hover:bg-gray-900/90"
        >작성</button>
      </div>
    </form>
  </div>
</main>